<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app 
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>


    <!-- General description of your web application -->

    <display-name>Assignment Recommender</display-name>
    <description>
      An assignment recommender for bug triage
    </description>


    <!-- Context initialization parameters that define shared
         String constants used within your application, which
         can be customized by the system administrator who is
         installing your application.  The values actually
         assigned to these parameters can be retrieved in a
         servlet or JSP page by calling:

             String value =
               getServletContext().getInitParameter("name");

         where "name" matches the <param-name> element of
         one of these initialization parameters.

         You can define any number of context initialization
         parameters, including zero.
    -->

    <context-param>
      <param-name>webmaster</param-name>
      <param-value>janvik@cs.ubc.ca</param-value>
      <description>
        The EMAIL address of the administrator to whom questions
        and comments about this application should be addressed.
      </description>
    </context-param>


    <!-- Servlet definitions for the servlets that make up
         your web application, including initialization
         parameters.  With Tomcat, you can also send requests
         to servlets not listed here with a request like this:

           http://localhost:8080/{context-path}/servlet/{classname}

         but this usage is not guaranteed to be portable.  It also
         makes relative references to images and other resources
         required by your servlet more complicated, so defining
         all of your servlets (and defining a mapping to them with
         a servlet-mapping element) is recommended.

         Servlet initialization parameters can be retrieved in a
         servlet or JSP page by calling:

             String value =
               getServletConfig().getInitParameter("name");

         where "name" matches the <param-name> element of
         one of these initialization parameters.

         You can define any number of servlets, including zero.
    -->

    <servlet>
      <servlet-name>ViewBugServlet</servlet-name>
      <description>
        Augment a bug report with recommendations
      </description>
      <servlet-class>recommender.servlet.ViewBugServlet</servlet-class>
    </servlet>
    
    <servlet>
      <servlet-name>ProcessBugServlet</servlet-name>
      <description>
        Collect data and process bug report change
      </description>
      <servlet-class>recommender.servlet.ProcessBugServlet</servlet-class>
    </servlet>
    
    <servlet>
      <servlet-name>ConsentServlet</servlet-name>
      <description>
        Servlet for collecting consent information and present background survey
      </description>
      <servlet-class>recommender.servlet.ConsentServlet</servlet-class>
    </servlet>

	<servlet>
      <servlet-name>BackgroundServlet</servlet-name>
      <description>
        Servlet for collecting background information and present account setup form
      </description>
      <servlet-class>recommender.servlet.BackgroundServlet</servlet-class>
    </servlet>
    
    <servlet>
      <servlet-name>AccountSetupServlet</servlet-name>
      <description>
        Servlet for collecting account information and present instructuions for configuring work environment
      </description>
      <servlet-class>recommender.servlet.AccountSetupServlet</servlet-class>
    </servlet>
    
    <servlet>
      <servlet-name>GenerateScriptServlet</servlet-name>
      <description>
        Servlet to generate a customized GreaseMonkey script for a particular user
      </description>
      <servlet-class>recommender.servlet.GenerateScriptServlet</servlet-class>
    </servlet>
    
    <servlet>
      <servlet-name>ViewLogServlet</servlet-name>
      <description>
        Servlet to present the gathered log to the user
      </description>
      <servlet-class>recommender.servlet.ViewLogServlet</servlet-class>
    </servlet>
    
    <servlet>
      <servlet-name>SubmitLogServlet</servlet-name>
      <description>
        Servlet to present the gathered log to the user
      </description>
      <servlet-class>recommender.servlet.SubmitLogServlet</servlet-class>
    </servlet>
    
    <servlet>
      <servlet-name>AssignmentSurveyServlet</servlet-name>
      <description>
        Servlet to gather data from assignment choice survey
      </description>
      <servlet-class>recommender.servlet.AssignmentServlet</servlet-class>
    </servlet>

	<servlet>
      <servlet-name>RecommenderSurveyServlet</servlet-name>
      <description>
        Servlet to gather data from log submission survey
      </description>
      <servlet-class>recommender.servlet.RecommenderServlet</servlet-class>
    </servlet>
    
    <servlet>
      <servlet-name>RedirectionServlet</servlet-name>
      <description>
        Servlet to present a nice page while the bug report with recommendations is being retrieved
      </description>
      <servlet-class>recommender.servlet.RedirectionServlet</servlet-class>
    </servlet>
    
    <servlet>
      <servlet-name>JoinServlet</servlet-name>
      <description>
        Servlet presenting the consent form to join experiment
      </description>
      <servlet-class>recommender.servlet.JoinExperimentServlet</servlet-class>
    </servlet>
        
    <servlet>
      <servlet-name>LoginServlet</servlet-name>
      <description>
        Servlet presenting a page to either login or get an id
      </description>
      <servlet-class>recommender.servlet.LoginServlet</servlet-class>
    </servlet>
    
	<servlet>
      <servlet-name>DirectoryServlet</servlet-name>
      <description>
        Servlet presenting a table of contents style directory of pages the user may want to use
      </description>
      <servlet-class>recommender.servlet.DirectoryServlet</servlet-class>
    </servlet>    
    
    <servlet>
      <servlet-name>AccountChangeServlet</servlet-name>
      <description>
        Servlet presenting a form for the user to update their account information
      </description>
      <servlet-class>recommender.servlet.AccountChangeServlet</servlet-class>
    </servlet> 
    
    <servlet>
      <servlet-name>MakeAccountChangeServlet</servlet-name>
      <description>
        Servlet recording updated account information
      </description>
      <servlet-class>recommender.servlet.MakeAccountChangeServlet</servlet-class>
    </servlet>   
    
     <servlet>
      <servlet-name>SearchServlet</servlet-name>
      <description>
        Servlet for capturing BUGLIST cookie
      </description>
      <servlet-class>recommender.servlet.BugzillaSearchServlet</servlet-class>
    </servlet>   
    
    <!-- Define mappings that are used by the servlet container to
         translate a particular request URI (context-relative) to a
         particular servlet.  The examples below correspond to the
         servlet descriptions above.  Thus, a request URI like:

           http://localhost:8080/{contextpath}/graph

         will be mapped to the "graph" servlet, while a request like:

           http://localhost:8080/{contextpath}/saveCustomer.do

         will be mapped to the "controller" servlet.

         You may define any number of servlet mappings, including zero.
         It is also legal to define more than one mapping for the same
         servlet, if you wish to.
    -->

    <servlet-mapping>
      <servlet-name>ViewBugServlet</servlet-name>
      <url-pattern>/viewBug</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
      <servlet-name>ProcessBugServlet</servlet-name>
      <url-pattern>/processBug</url-pattern>
    </servlet-mapping>

	<servlet-mapping>
      <servlet-name>ConsentServlet</servlet-name>
      <url-pattern>/consent</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
      <servlet-name>BackgroundServlet</servlet-name>
      <url-pattern>/background</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
      <servlet-name>AccountSetupServlet</servlet-name>
      <url-pattern>/accountSetup</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
      <servlet-name>GenerateScriptServlet</servlet-name>
      <url-pattern>/redirectScript</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
      <servlet-name>ViewLogServlet</servlet-name>
      <url-pattern>/viewLog</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
      <servlet-name>SubmitLogServlet</servlet-name>
      <url-pattern>/submitLog</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
      <servlet-name>AssignmentSurveyServlet</servlet-name>
      <url-pattern>/assignment</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
      <servlet-name>RecommenderSurveyServlet</servlet-name>
      <url-pattern>/recommender</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
      <servlet-name>RedirectionServlet</servlet-name>
      <url-pattern>/redirect</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
      <servlet-name>JoinServlet</servlet-name>
      <url-pattern>/join</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
      <servlet-name>LoginServlet</servlet-name>
      <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>DirectoryServlet</servlet-name>
      <url-pattern>/directory</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
      <servlet-name>AccountChangeServlet</servlet-name>
      <url-pattern>/accountChange</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
      <servlet-name>MakeAccountChangeServlet</servlet-name>
      <url-pattern>/makeChange</url-pattern>
    </servlet-mapping>
    
     <servlet-mapping>
      <servlet-name>SearchServlet</servlet-name>
      <url-pattern>/search</url-pattern>
    </servlet-mapping>
    
    <!-- Define the default session timeout for your application,
         in minutes.  From a servlet or JSP page, you can modify
         the timeout for a particular session dynamically by using
         HttpSession.getMaxInactiveInterval(). -->

    <session-config>
      <session-timeout>30</session-timeout>    <!-- 30 minutes -->
    </session-config>


</web-app>
